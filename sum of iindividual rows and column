for(i=0; i<3; i++)
{
      sc=0, sr=0;   //initialize sc and sr here so that after every iteration it becomes 0

    for(j=0; j<3; j++)    
    {


       sr=sr+a[i][j];
       sc=sc+a[j][i];

    }
   printf("sr=%d sc=%d\n", sr, sc);
}


}



