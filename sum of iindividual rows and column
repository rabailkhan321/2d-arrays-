


#include<stdio.h>
int main()
{
int i,j,sc,sr, sum=0;
int a[3][3];
printf("enter the elements for 3 by 3 matrix\n");
for(i=0; i<3; i++)
{
for(j=0; j<3; j++)
{
scanf("%d", &a[i][j]);


}
}

/*for(i=0; i<2; i++)
